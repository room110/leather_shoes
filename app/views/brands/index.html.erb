<div class="row">
  <div class="col-xs-3"></div>
    

    <div class="col-xs-6">
    


      <p class="admin-page-title-genre">ブランド一覧・追加</p>

	  <%= form_for(@brand, url: brands_path) do |f| %>
		  <label>ブランド</label>
		  <%= f.text_field :name %>
		<%= f.submit '追加',{class: 'btn btn-info'} %>
	  <% end %>
	  


	  <table class="table table-hover">
		<thead>
			<tr class="active">
				<th>ブランド</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @brands.each do |brand| %>
			<tr>
				<td>
					<%= brand.name %>
				</td>
				<td>
				</td>
				<td class="text-right">
					<%= link_to "編集する", edit_brand_path(brand), {class: 'btn btn-primary'} %>
				</td>
			</tr>
			<% end %>
		</tbody>
	  </table>


</div>


<div class="col-xs-3"></div>
</div>