<div class="container">
<div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-10">
      <div class="text-center">
        <h2>Users</h2>
      </div>
      <table class="table table-hover table-inverse">
          <tr>
              <th>image</th>
              <th></th>
              <th>name</th>
              <th></th>
              <th></th>
          </tr>
        <% @users.each do |user| %>
          <tr>
              <th>
                <%= attachment_image_tag user, :profile_image, size: "30x30", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "img/no_image.jpg" %>
              </th>
              <th></th>
              <th align="left"><%= user.name %></th>
              <th></th>
              <th><%= link_to "Show", user_path(user.id) %></th>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col-xs-1"></div>
</div>
</div>