<h1>User info</h1>

<%= form_for(@user) do |f| %>

<% if @user.errors.any? %>
<table>
	<font color="red">
       <p>2 errors prohibited this book from being saved:</p>
         <ul>
            <li>Name can't be blank</li>
            <li>Introduction can't be blank</li>
         </ul>
    </font>
</table>
<% end %>



<h4>Name</h4>
  <%= f.text_field :name %>
<h4>Image</h4>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像"%>
<h4>Introduction</h4>
  <%= f.text_area :introduction %>
<%= f.submit 'Update User'%>

<% end %>