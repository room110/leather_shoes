<div class="row">
  <div class="col-xs-2"></div>
  <div class="col-xs-4">
    <h1>New shoes</h1>

    <%= form_for(@shoe) do |f| %>
        <h4>Title</h4>
          <%= f.text_field :title, class:"col-xs-12"%>
        <h4>Opinion</h4>
          <%= f.text_area :body, class:"col-xs-12" %>
        <h4>画像</h4>
          <%= f.attachment_field :shoe_image, class:"col-xs-12"%>
  </div>

  <div class="col-xs-4">

       <h4>ブランド</h4>
         <%= f.collection_check_boxes(:brand_ids, Brand.all, :id, :name) do |brand| %> 
          <%= brand.label do %>
            <%= brand.check_box %>
            <%= brand.text %>
          <% end %>
        <% end %>
      <h4>サイズ</h4>
        <%= f.collection_check_boxes(:size_ids, Size.all, :id, :name) do |size| %> 
          <%= size.label do %>
            <%= size.check_box %>
            <%= size.text %>
          <% end %>
        <% end %>
      <h4>タイプ</h4>
        <%= f.collection_select(:type_ids, Type.all, :id, :name) do |type| %> 
        <% end %>

      <h4 class=""></h4>
      <%= f.submit 'Create shoes', class:"btn btn-primary col-xs-12" %>
    <% end %>
  </div>
  <div class="col-xs-2"></div>
</div>


