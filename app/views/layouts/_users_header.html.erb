<div class="container">
       <nav class="nav navbar-nav navbar-left">
         <%= image_tag "img/leathershoes_logo.png", size: '250x50', alt: "LeatherShoes" %>

       </nav>

       <% if user_signed_in? %>
       <nav class="nav navbar-nav navbar-brand-center">
        <span style= "color: white;">ようこそ、<%= current_user.name %>さん！</span>
       </nav>
       <nav>
        <ul class="nav navbar-nav navbar-right">


          
          <li>
              <%= form_tag(search_path, method: :get) do %>
                <%= text_field_tag (:word) %>
                <%= select_tag 'range' ,options_for_select([
                  ['---選択してください---', ''],
                  ['User', '1'],
                  ['Shoe', '2']]) %>
                <%= select_tag 'search1', options_for_select([
                  ["前方一致","forward_match"],
                  ["後方一致","backward_match"],
                  ["完全一致","perfect_match"],
                  ["部分一致","partial_match"]]) %>
                <%= submit_tag "検索" %>
              <% end %>
          </li>
          <li>
            <%= link_to "Home", user_path(current_user.id) %>
          </li>
          <li>
            <%= link_to "User", users_path %></li>
          <li>
            <%= link_to "Shoes", shoes_path %></li>
          <li>
            <%= link_to "Login", destroy_user_session_path, method: :delete %></li>
        </ul>
      </nav>
    <% else %>
      <nav class="nav navbar-nav navbar-brand-center">
        <span style= "color: white;">ようこそ、ゲストさん！</span>
      </nav>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Home", root_path %></li>
　　　　　  <li><%= link_to "About", about_path %></li>
          <li><%= link_to "sign up", new_user_registration_path %></li>
          <li><%= link_to "login", new_user_session_path %></li>
        </ul>
      </nav>
     <%end%>
   </div>
