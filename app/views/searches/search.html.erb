<h2>Results index</h2>
<!--books一覧 -->
<table class="table table-hover table-inverse">
  <thead>
    <tr>
     <th></th>
     <th></th>
     <th></th>
     <th colspan="3"></th>
    </tr>
  </thead>
  <% if @range == '2' %>
        <thead>
          <tr>
            <th>image</th>
            <th>title</th>
            <th colspan="3"></th>
          </tr>
          </thead>
        <tbody>
          <% @shoes.each do |shoe| %>
          <tr>
            <td>
              <%= link_to(shoe.user) do %>
              <%= attachment_image_tag(shoe.user, :profile_image, :fill, 50, 50, fallback: "img/no_image.jpg") %>
              <% end %>
            </td>
            <td>
              <%= link_to shoe.title, shoe, class: "shoe_#{shoe.id}" %>
            </td>
            <td><%= shoe.body %></td>
          </tr>
          <% end %>
        </tbody>
  <% elsif @range == '1' %>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @user.each do |user| %>
            <tr>
              <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "img/no_image.jpg") %></td>
            <td><%= user.name%></td>
            <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
            </tr>
          <% end %>
        </tbody>
  <% elsif @range == '3' %>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <%= @shoes.inspect %>
        <% @shoes.each do |shoe| %>
        <%= link_to "Show", shoe_path(shoe.id) %>
        <% end %>
        <tbody>
          <% @brands.each do |brand| %>
            <tr>
              <td><%#= attachment_image_tag(brand.id.shoe, :shoe_image, :fill, 50, 50, fallback: "img/no_image.jpg") %></td>
            <td><%= brand.name%></td>
            </tr>
          <% end %>
        </tbody>
  <% elsif @range == '4' %>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @sizes.each do |size| %>
            <tr>
              <td><%#= attachment_image_tag(brand.id.shoe, :shoe_image, :fill, 50, 50, fallback: "img/no_image.jpg") %></td>
            <td><%= size.name%></td>
            <td><%#= link_to "Show", brand.shoes, class: "brand_#{brand.id}" %></td>
            </tr>
          <% end %>
        </tbody>
    <% elsif @range == '5' %>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @types.each do |type| %>
            <tr>
              <td><%#= attachment_image_tag(brand.id.shoe, :shoe_image, :fill, 50, 50, fallback: "img/no_image.jpg") %></td>
            <td><%= type.name%></td>
            <td><%#= link_to "Show", brand.shoes, class: "brand_#{brand.id}" %></td>
            </tr>
          <% end %>
        </tbody>
    <% elsif @range == '6' %>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @leathers.each do |learher| %>
            <tr>
              <td><%#= attachment_image_tag(brand.id.shoe, :shoe_image, :fill, 50, 50, fallback: "img/no_image.jpg") %></td>
            <td><%= leather.name%></td>
            <td><%#= link_to "Show", brand.shoes, class: "brand_#{brand.id}" %></td>
            </tr>
          <% end %>
        </tbody>
    <% else %>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
            <tr>
              <td><%#= attachment_image_tag(brand.id.shoe, :shoe_image, :fill, 50, 50, fallback: "img/no_image.jpg") %></td>
            <td><%= article.name%></td>
            <td><%#= link_to "Show", brand.shoes, class: "brand_#{brand.id}" %></td>
            </tr>
          <% end %>
        </tbody>
  <% end %>
 </table>