<h2>検索結果</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
     <th></th>
     <th></th>
     <th></th>
     <th colspan="3"></th>
    </tr>
  </thead>
  <% if @range == '1' %>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @user.each do |user| %>
          <tr>
            <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "img/no_image.jpg") %></td>
            <td><%= user.name%></td>
            <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
          </tr>
          <% end %>
        </tbody>
  <% elsif @range == '2' %>
        <thead>
          <tr>
            <th>image</th>
            <th>title</th>
            <th colspan="3"></th>
          </tr>
          </thead>
        <tbody>
          <% @shoes.each do |shoe| %>
          <tr>
            <td>
              <%= link_to(shoe.user) do %>
              <%= attachment_image_tag(shoe.user, :profile_image, :fill, 50, 50, fallback: "img/no_image.jpg") %>
              <% end %>
            </td>
            <td>
              <%= link_to shoe.title, shoe, class: "shoe_#{shoe.id}" %>
            </td>
            <td><%= shoe.body %></td>
          </tr>
          <% end %>
        </tbody>
  <% elsif @range == '3' %>
        <thead>
          <tr>
            <th>shoe image</th>
            <th>title</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @shoes.each do |shoe| %>
            <tr>
              <td><%= attachment_image_tag(shoe, :shoe_image, :fill, 50, 50, fallback: "img/no_image.jpg") %></td>
              <td><%= shoe.title%></td>
              <td><%= link_to "Show", shoe_path(shoe.id) %></td>
            </tr>
          <% end %>
        </tbody>
  <% elsif @range == '4' %>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
