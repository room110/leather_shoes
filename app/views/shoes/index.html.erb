<div class="container">
  <div class="row">
     <div class="col-xs-9">
       <h2>Shoes Index</h2>

  <table class="table table-hover table-inverse">
        <tr>
          <th></th>
          <th></th>
          <th></th>
          <th>Title</th>
          <th></th>
          <th></th>
          <th>Opinion</th>
          <th></th>
          <th></th>
          <th>image</th>
        </tr>
        <% @shoes.each do |shoe| %>
        <tr>
          <th>
            <%= link_to user_path(shoe.user) do%>
              <%= attachment_image_tag shoe.user, :profile_image, size: "30x30", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "img/no_image.jpg" %>
            <% end %>
          </th>
          <th></th>
          <th></th>
          <th align="left"><%= link_to shoe.title, shoe_path(shoe.id) %></th>
          <th></th>
          <th></th>
          <th align="left"><%= shoe.body %></th>
          <th></th>
          <th></th>
          <th align="left"><%= attachment_image_tag(shoe, :shoe_image,fallback: "img/no_image.jpg",size:"200x200") %></th>
       </tr>
     <% end %>
  </table>
  <!-- kaminariページネーション記述-->
  <%= paginate @shoes %>
</div>
</div>
</div>